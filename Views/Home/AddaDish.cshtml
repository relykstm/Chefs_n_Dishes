@model Chefs_n_Dishes.Models.Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add A Dish</title>
</head>
<body>
    <h1>Add A Dish!</h1>
    <br/>
    <a href = "/dishes">Home</a>
    <br/>
    <hr>
    <br/>
    <form asp-action="NewDish" asp-controller="Home" method="post">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <br>
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input asp-for="Calories">
        <br>
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
        <br/>
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <br>
        <span asp-validation-for="ChefId"></span>
        <label asp-for="ChefId"></label>
        <select asp-for=ChefId>
            @foreach(var chef in ViewBag.Chefs){
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
            }
        </select>
        <input type="submit" value="Add a Dish!"/>
    </form>
</body>
</html>